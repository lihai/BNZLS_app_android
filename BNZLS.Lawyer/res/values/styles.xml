<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    
    
    
    <!-- widgets styles -->
    
    <style name="light_color_item_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">14sp</item>   
        <item name="android:textColor">#808080</item>  
    </style>
    
    <style name="title_small_font_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">18sp</item>     
    </style>
    
    <style name="input_text_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">16sp</item>   
        <item name="android:textColor">#ff000000</item>
    </style>
    
    <style name="content_margin_style">
        <item name="android:layout_marginLeft">@dimen/content_margin</item>
        <item name="android:layout_marginRight">@dimen/content_margin</item>
    </style>
    
    <style name="TextView_With_Drawable" parent="@style/content_margin_style">
        
        <item name="android:drawablePadding">50dp</item>
        <item name="android:background">@drawable/setting_item_style</item>
        <item name="android:drawableRight">@drawable/login_create_account</item>
        <item name="android:padding">@dimen/standard_padding</item>
         <item name="android:layout_marginLeft">@dimen/standard_padding</item>
        <item name="android:layout_marginRight">@dimen/standard_padding</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:textSize">16sp</item>
	</style>
    
    <style name="TabLabelApperance" parent="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget">
    </style>
    
    <style name="loading_text_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">18sp</item> 
    </style>
    
    <style name="edit_text_style" parent="@style/input_text_style">
        <item name="android:background">@drawable/custom_border</item> 
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:textColorHint">#b5b5b5</item>
    </style>
    
    <style name="small_text_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">16sp</item>   
        <item name="android:textColor">#324f85</item>
    </style>
    
    <style name="medium_button_text_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">18sp</item>  
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#c0000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">1</item>      
    </style>
    
    <style name="text_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#c0000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:layout_marginLeft">@dimen/navigation_margin</item>
        <item name="android:layout_marginRight">@dimen/navigation_margin</item>  
        <item name="android:textSize">16sp</item>     
    </style>
    
    <style name="title_big_font_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#c0000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>
