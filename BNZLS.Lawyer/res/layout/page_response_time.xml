<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RadioGroup
    android:id="@+id/myRadioGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    
    >
    <!--第一個RadioButton -->
    <RadioButton
      android:id="@+id/rdo4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Within 4 Hours"
      android:layout_gravity="center_horizontal"
    />
    <!--第二個RadioButton -->
    <RadioButton
      android:id="@+id/rdo8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Within 8 Hours"
      android:layout_gravity="center_horizontal"
    />
    
    <RadioButton
      android:id="@+id/rdo12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Within 12 Hours"
      android:layout_gravity="center_horizontal"
    />
    
    <RadioButton
      android:id="@+id/rdo24"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Within 24 Hours"
      android:layout_gravity="center_horizontal"
    />
    
    <RadioButton
      android:id="@+id/rdo48"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Within 48 Hours"
      android:layout_gravity="center_horizontal"
    />

    </RadioGroup>    
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <Button 
	    android:id="@+id/btnOK"
	    android:layout_width="match_parent"
	    android:layout_weight="1"
	    android:layout_height="@dimen/log_in_button_height"
	    android:background="@drawable/btn_plain_green_style"
	    android:text="@string/btn_OK"
	    android:layout_marginLeft="@dimen/group_padding"
	    android:layout_marginRight="@dimen/group_padding"
	    android:layout_marginTop="@dimen/group_padding"
	    />
	    <Button 
	    android:id="@+id/btnCancel"
	    android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/log_in_button_height"
	    android:background="@drawable/btn_plain_green_style"
	    android:text="@string/btn_cancel"
	    android:layout_marginLeft="@dimen/group_padding"
	    android:layout_marginRight="@dimen/group_padding"
	    android:layout_marginTop="@dimen/group_padding"
	    />
	</LinearLayout>

</LinearLayout>
