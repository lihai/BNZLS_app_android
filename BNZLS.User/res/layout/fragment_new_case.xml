<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/navigation_bar"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/group_padding"
        android:layout_marginLeft="@dimen/group_padding"
        android:layout_marginRight="@dimen/group_padding">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/label_lawyer_name"
            android:layout_marginRight="@dimen/content_margin"
            />
        <TextView
            android:id="@+id/lawyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="18sp"
            android:text="Mr. Zang Yi"
            />
        </LinearLayout>
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/group_padding"
        android:layout_marginLeft="@dimen/group_padding"
        android:layout_marginRight="@dimen/group_padding">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/label_category"
            android:layout_marginRight="@dimen/content_margin"
            />
        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="18sp"
            android:text="Realestate"
            />
        </LinearLayout>
        
    <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/group_padding"
         android:layout_marginLeft="@dimen/group_padding"
         android:textSize="18sp"
         android:text="@string/label_desc"
         />
	<TextView
	    android:id="@+id/desc"
	    android:layout_marginLeft="@dimen/group_padding"
	    android:layout_marginRight="@dimen/group_padding"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:background="@drawable/custom_border"
	    android:text="Thanks for the great service and basically solved my issue and the whole process was a extradinary experience! Thanks agin!"
	    />
	
	<TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/group_padding"
         android:layout_marginLeft="@dimen/group_padding"
         android:textSize="18sp"
         android:text="@string/label_appeal"
         />
	<TextView
	    android:id="@+id/requirement"
	    android:layout_marginLeft="@dimen/group_padding"
	    android:layout_marginRight="@dimen/group_padding"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:background="@drawable/custom_border"
	    android:text="Thanks for the great service and basically solved my issue and the whole process was a extradinary experience! Thanks agin!"
	    />
    

</LinearLayout>
